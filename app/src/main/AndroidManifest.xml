<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobit.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobit">
        <service
            android:name="com.mobit.android.service.UpbitAPIService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.mobit.android.ui.PopupMainIndicatorSettingActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.mobit.android.ui.PopupChartResetConfirmActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="com.mobit.android.ui.MainIndicatorSettingActivity" />
        <activity
            android:name="com.mobit.android.ui.PopupResetConfirmActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="com.mobit.android.ui.FirstSettingActivity" />
        <activity
            android:name="com.mobit.android.ui.PopupBuySellActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.mobit.android.ui.MainActivity"
            android:exported="false"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".feature.intro.view.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>