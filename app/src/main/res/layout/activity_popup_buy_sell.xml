<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PopupBuySellActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/popup_buy_title"
        android:textColor="@color/popup_buy_red"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/transaction_background"
        android:gravity="center"
        android:padding="10dp"
        android:text="도지코인(DOGE/KRW)"
        android:textColor="@color/upbit_light_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/popup_buy_sell_divide"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="@string/popup_buy_sell_market_price"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/popup_buy_sell_price"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="412 KRW"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/popup_buy_sell_count"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderCount"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="15.000000 DOGE"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/popup_buy_sell_total_price"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderTotalPrice"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="46,184,255 KRW"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/popup_buy_sell_linearlayout_border"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/popup_buy_sell_button_border"
            android:gravity="center"
            android:text="@string/popup_buy_sell_cancel"
            android:textColor="#555d6a"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/main_background"
            android:gravity="center"
            android:text="@string/popup_buy_confirm"
            android:textColor="@color/popup_buy_red"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>