<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/main_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.PopupResetConfirmActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/reset_confirm_title"
        android:textColor="@color/upbit_light_gray"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:text="@string/reset_confirm_info1"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/reset_confirm_info2"
            android:textColor="@color/upbit_light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/popup_buy_sell_linearlayout_border"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/popup_buy_sell_button_border"
            android:gravity="center"
            android:text="@string/reset_confirm_cancel"
            android:textColor="#555d6a"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/main_background"
            android:gravity="center"
            android:text="@string/reset_confirm_confirm"
            android:textColor="#0e5fc8"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>