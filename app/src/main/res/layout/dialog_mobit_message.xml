<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="334dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/back_ffffff_round26">

    <TextView
        android:id="@+id/tv_mobitDialog_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="18dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="Default Message"
        android:textColor="@color/c_202020"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/tv_mobitDialog_leftBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mobitDialog_leftBtn"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back_dialog_confirm_btn"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="확인"
        android:textColor="@color/c_ffffff"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_mobitDialog_rightBtn"
        app:layout_constraintTop_toBottomOf="@id/tv_mobitDialog_message" />

    <TextView
        android:id="@+id/tv_mobitDialog_rightBtn"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/back_dialog_cancel_btn"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="취소"
        android:textColor="@color/c_7e7e7e"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tv_mobitDialog_leftBtn"
        app:layout_constraintLeft_toRightOf="@id/tv_mobitDialog_leftBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_mobitDialog_leftBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>